@model PathFinder.ViewModels.Login.LoginModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Авторизация</title>
    <link href="~/images/logo.png" rel="shortcut icon" type="image/x-icon"/>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/css/signin.css" rel="stylesheet" type="text/css"/>
</head>
<body class="text-center">
<form class="form-signin" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
    <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label for="inputEmail" class="sr-only" asp-for="Email">Email</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus="" asp-for="Email" required="">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only" asp-for="Password">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="Password" required="">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Запомнить меня
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Войти" class="btn btn-lg btn-primary btn-block"/>
    </div>
    <p class="mt-5 mb-3 text-muted">© 2020</p>
</form>
</body>
</html>
@model PathFinder.ViewModels.User.UserViewModel

<div class="form-group">
    <div class="col-12">
        <label asp-for="@Model.User.Name"></label>
        <input asp-for="@Model.User.Name" class="form-control">
        <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-12">
        <label asp-for="@Model.User.Email"></label>
        <input asp-for="@Model.User.Email" class="form-control">
        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-12">
        @{
            var roleSelectList = Model.Roles
                .Select(role => new SelectListItem(role.Name, role.RoleId.ToString())).ToList();
            roleSelectList.First(x => x.Text == "user").Selected = true;
        }
        <label asp-for="@Model.User.RoleId"></label>
        <select asp-for="@Model.User.RoleId" asp-items="roleSelectList" class="custom-select"></select>
        <span asp-validation-for="@Model.User.RoleId" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-12">
        <label asp-for="@Model.User.Password"></label>
        <input type="password" asp-for="@Model.User.Password" class="form-control" value="@Model.User.Password">
        <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
    </div>
</div>

<div class="col-12">
    <input class="btn btn-success" type="submit" value="Сохранить"/>
    <button class="btn btn-outline-dark" asp-controller="User" asp-action="Index">Назад</button>
</div>
@model List<PathFinder.Data.Models.Users.User>

<div class="my-3 p-3 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h4>Пользователи</h4>
        <a asp-controller="User" asp-action="Create">Новый пользователь</a>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Имя</th>
            <th scope="col">Email</th>
            <th scope="col">Роль</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <a>
                <tr style="transform: rotate(0);">
                    <td>
                        <a class="stretched-link" asp-controller="User" asp-action="Edit" asp-route-userId="@user.Id">@user.Name</a>
                    </td>
                    <td>@user.Email</td>
                    <td>@user.Role.Name</td>
                </tr>
            </a>
        }
        </tbody>
    </table>
</div>
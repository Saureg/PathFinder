@model PathFinder.Data.Models.Users.User

<div class="row mb-5 m-3 p-3" xmlns="http://www.w3.org/1999/html">
    <form asp-controller="User" asp-action="Profile" method="post">
        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.Role"></label>
                <input disabled asp-for="@Model.Role.Name" class="form-control">
            </div>
            
        </div>
        
        <div class="col-12">
            <input class="btn btn-success" type="submit" value="Сохранить">
        </div>
        
    </form>
</div>
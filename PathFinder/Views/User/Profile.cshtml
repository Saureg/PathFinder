@model PathFinder.ViewModels.User.ProfileViewModel

@{
    var style = (bool) ViewData["ProfileSuccess"] ? string.Empty : "display: none;";
}

<div class="alert alert-success fade show" role="alert" style="@style">
    <strong>Профиль успешно сохранен!</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="row mb-5 m-3 p-3" xmlns="http://www.w3.org/1999/html">

    <form asp-controller="User" asp-action="Profile" method="post">
        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.RoleName"></label>
                <input disabled asp-for="@Model.RoleName" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.NewPassword"></label>
                <input type="password" asp-for="@Model.NewPassword" class="form-control">
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12">
            <input class="btn btn-success" type="submit" value="Сохранить">
        </div>

    </form>
</div>
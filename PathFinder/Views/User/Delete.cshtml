@model PathFinder.Data.Models.Users.User

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Удаление</h1>
</div>

<div class="jumbotron text-center">
    <div class="container">
        <h1>@Model.Email</h1>
        <p class="lead">Вы действительно хотите удалить этого пользователя?</p>
        <p>
        <form method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn my-2 btn-outline-danger" asp-controller="User" asp-action="Delete" asp-route-userId="@Model.Id">Удалить</button>
            <a asp-controller="User" asp-action="Index" class="btn my-2 btn-outline-dark">Отмена</a>
        </form>
    </div>
</div>
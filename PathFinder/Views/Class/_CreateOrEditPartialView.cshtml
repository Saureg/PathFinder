@model PathFinder.Data.Models.CharClass.CharClass
<div class="container ml-5">
    <div class="form-group">
        <div class="col-12">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-12">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-12">
            <label asp-for="@Model.Role"></label>
            <textarea asp-for="@Model.Role" class="form-control"></textarea>
        </div>
    </div>
    
    <div class="col-12">
        <input id="saveRace" class="btn btn-success" type="submit" value="Сохранить"/>
        <button class="btn btn-outline-dark" asp-controller="Class" asp-action="List">Назад</button>
    </div>
</div>
@model Race

<div class="alert alert-success m-4 p-3" id="success-alert">
    <button type="button" class="close" data-dismiss="alert">x</button>
    Раса успешно сохранена!
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
    <h4><span class="text-muted">Раса</span></h4>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
                <a asp-controller="Race" asp-action="Delete" asp-route-raceId="@Model.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
            </div>
    </div>
</div>

<div class="row mb-5 m-3 p-3" xmlns="http://www.w3.org/1999/html">
    <form asp-action="Edit" method="post">
        @Html.HiddenFor(model => model.Id)
        @await Html.PartialAsync("RacePartialView")
    </form>
</div>
    
@section scripts
{
    @{
        if (ViewData["Success"] != null && (bool) ViewData["Success"])
        {
            <script type="text/javascript">
                 $("#success-alert").fadeTo(2000, 500).slideUp(500, function() {
                     $("#success-alert").slideUp(500)});
             </script>
        }
        else
        {
            <script type="text/javascript">
                 $("#success-alert").hide();
             </script>
        }
    }
    <script src="@Url.Content("~/js/raceScript.js")" type="text/javascript"></script>
}
